{{#if newTrip}}
{{else}}

<form class="form edit-trip-form">
  <div class="form-group">
    <label for="trip-description">Description</label>
    <input class="form-input" type="text" id="trip-description" data-tripid='{{id}}' value='{{description}}' />
  </div>
    <div class="form-group">
    <label for="trip-city">City</label>
    <input class="form-input" type="text" id="trip-city" value='{{destination.city}}' />
  </div>
    <div class="form-group">
    <label for="trip-country">Country</label>
    <input class="form-input" type="text" id="trip-country" value='{{destination.country}}' />
  </div>
    <div class="form-group">
    <label for="trip-date">Start Date</label>
    <input class="form-input" type="text" id="trip-date" value='{{format_date start_date}}' />
  </div>
    <div class="form-group">
    <label for="trip-duration">Duration (days)</label>
    <input class="form-input" type="text" id="trip-duration" value='{{duration}}' />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" id='edit-update'>Update</button>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" id='edit-delete'>Delete</button>
  </div>
  <hr>
  <h3>Expenses</h3>
  <ul id="expense-list">
  {{#each expenses as |expense|}}
  <li>{{expense.category}} Budget: {{expense.budget}} Spent: {{expense.spent}} <button class="update" id='update-expense' data-expid={{expense.id}}>Update</button><button class="delete" id='delete-expense' data-expid={{expense.id}}>Delete</button></li>
  {{/each}}
  </ul>

    <form class="form expense-form">
      <div class="form-group">
        <label for="expense-category">Category</label>
        <input class="form-input" type="text" id="expense-category">
      </div>
      <div class="form-group">
        <label for="expense-budget">Budget</label>
        <input class="form-input" type="text" id="expense-budget">
      </div>
            <div class="form-group">
        <label for="expense-spent">Spent</label>
        <input class="form-input" type="text" id="expense-spent">
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id='new-exp'  data-tripid='{{id}}'>Add Expense</button>
      </div>
    </form>

</form>
<script src="../js/trip.js"></script>

{{/if}}
